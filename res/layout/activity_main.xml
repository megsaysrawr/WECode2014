<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <ImageButton
        android:id="@+id/SwagButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/BeSpecificText"
        android:layout_alignTop="@+id/PizzaButton"
        android:src="@drawable/swag" />

    <TextView
        android:id="@+id/WhatText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/SwagButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:text="What?" />

    <ImageButton
        android:id="@+id/EHButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/WHButton"
        android:layout_below="@+id/WHButton"
        android:src="@drawable/eh" />

    <ImageButton
        android:id="@+id/CCButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ACButton"
        android:layout_alignTop="@+id/EHButton"
        android:src="@drawable/cc" />

    <ImageButton
        android:id="@+id/MHButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ACButton"
        android:layout_toRightOf="@+id/ACButton"
        android:src="@drawable/mh" />

    <ImageButton
        android:id="@+id/LPBButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/MHButton"
        android:layout_alignTop="@+id/CCButton"
        android:src="@drawable/lpb" />

    <ImageButton
        android:id="@+id/PizzaButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/ACButton"
        android:src="@drawable/pizza" />

    <EditText
        android:id="@+id/BeSpecificText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/BeSpecificText"
        android:layout_below="@+id/PizzaButton"
        android:layout_marginTop="14dp"
        android:text="Be specific." />

    <ImageButton
        android:id="@+id/ACButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/WHButton"
        android:layout_toRightOf="@+id/WHButton"
        android:src="@drawable/ac" />

    <ImageButton
        android:id="@+id/WHButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/BeSpecificText"
        android:layout_below="@+id/BeSpecificText"
        android:layout_marginTop="26dp"
        android:src="@drawable/wh" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/EHButton"
        android:layout_below="@+id/EHButton"
        android:layout_marginTop="42dp"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText1"
        android:layout_below="@+id/EHButton"
        android:layout_marginTop="23dp"
        android:text="Room Number" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText1"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/editText1"
        android:text="SUBMIT" />

</RelativeLayout>
